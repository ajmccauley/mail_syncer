# Base
AWS_REGION=us-east-1
DYNAMODB_TABLE=mail-syncer-state
SYNC_INTERVAL_SECONDS=300
LOG_LEVEL=INFO
DRY_RUN=false

# Shared Outlook mailbox
OUTLOOK_EMAIL=outlook@example.com
MS_CLIENT_ID=your-ms-client-id
MS_CLIENT_SECRET=
MS_TENANT=consumers
MS_REFRESH_TOKEN=your-ms-refresh-token

# Route config (preferred for multi-source)
# SYNC_ROUTES_JSON should be a JSON array of route objects.
SYNC_ROUTES_JSON=[{"gmail_email":"gmail1@example.com","gmail_client_id":"gmail-client-id-1","gmail_client_secret":"gmail-client-secret-1","gmail_refresh_token":"gmail-refresh-token-1","outlook_target_folder":"Inbox/Gmail-1"},{"gmail_email":"gmail2@example.com","gmail_client_id":"gmail-client-id-2","gmail_client_secret":"gmail-client-secret-2","gmail_refresh_token":"gmail-refresh-token-2","outlook_target_folder":"Inbox/Gmail-2"}]

# Single-route fallback mode
# GMAIL_EMAIL=gmail1@example.com
# GMAIL_CLIENT_ID=gmail-client-id
# GMAIL_CLIENT_SECRET=gmail-client-secret
# GMAIL_REFRESH_TOKEN=gmail-refresh-token
# OUTLOOK_TARGET_FOLDER=Inbox/Gmail-1

